<body class="body">
  <div class="banner">
    <div class="banner-content">
      <h1 class="text-center">Tam's Cocktails</h1>
      <p>Great beverages to spend some chill out time with friends</p>
      <%= link_to "Add a cocktail", new_cocktail_path, class: "btn btn-primary btn-lg" %>
    </div>
  </div>

  <div class="cards">
  <% @cocktails.each do |cocktail| %>
    <div class="cards">
      <div class="card-category">
        <p> <%= cocktail.photo %></p>
        <h2><%= cocktail.name %></h2>
         <%= render "doses/new", cocktail: @cocktail, dose: @dose %>
      </div>
    <%= link_to "See more", cocktail_path(cocktail), class: 'card-link' %>
    </div>
  <% end %>
  </div>

</body>

